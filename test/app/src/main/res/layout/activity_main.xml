<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.MainActivity">

    <include layout="@layout/common_title"/>

    <ImageView
        android:id="@+id/iv_pop"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/ui_common_title"
        android:onClick="onViewClicked"
        android:src="@drawable/shape_changed_color"
        />

    <com.example.administrator.myapplication.mvvm.widget.AutoNewLineLayout
        android:id="@+id/flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pop"
        android:padding="10dp"
        app:horizontalSpace="10dp"
        app:vertivalSpace="10dp"
        >

        <Button
            android:id="@+id/btn_mvvm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试框架"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn_recycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试recyclerView"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试ExpandableListView"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FileProvide"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附件下载"
            android:textAllCaps="false"
            />
    </com.example.administrator.myapplication.mvvm.widget.AutoNewLineLayout>
</RelativeLayout>

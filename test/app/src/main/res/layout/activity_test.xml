<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.example.administrator.myapplication.mvvm.widget.RichTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/MarkRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:isIndicator="false"
        android:numStars="5"
        />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingBar2"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar"
        app:mrb_fillBackgroundStars="true"/>

    <TextView
        android:id="@+id/tv_popSoftInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar2"
        android:text="测试弹出软键盘"
        />

    <Button
        android:id="@+id/btn_ui_smooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_popSoftInput"
        android:text="测试UI卡顿"
        />

    <LinearLayout
        android:id="@+id/orderTypeNameLabel_Layout"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/test"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orderTypeNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="状态名称"
            android:textSize="12dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/orderTypeNameLabel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="状态名称"
        android:textSize="20dp"/>
</RelativeLayout>

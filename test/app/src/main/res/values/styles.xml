<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--去除actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="popup_vertical">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
    </style>

    <style name="style0">
        <item name="android:textSize">19dip</item>
        <item name="android:textColor">#f0f</item>
    </style>

    <style name="style1">
        <item name="android:textSize">23dip</item>
        <item name="android:textColor">#3ee</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MarkRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/diy</item>
        <item name="android:maxHeight">18dp</item>
        <item name="android:minHeight">18dp</item>

    </style>
</resources>
